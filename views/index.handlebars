<div class="wrapper">
  <div class="grid-box">
    <div class="grid grid-box-1">
      <h1>BURGER POLICE</h1>
    </div>
    <div class="grid grid-box-2">
      <div class="grid-box">
        <div class="grid grid-a">
          <h2>IN STOCK</h2>
        </div>
        <div class="grid grid-b">
          <div class="container container-1">
            <ul>
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block devour=true}}
                {{/unless}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="grid grid-box-3">
      <div class="grid-box">
        <div class="grid grid-a">
          <h2>DEVOURED</h2>
        </div>
        <div class="grid grid-b">
          <div class="container container-2">
            <ul>
              {{#each burgers}}
                {{#if devoured}}
                  {{> burgers/burger-block devour=false}}
                {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="grid grid-box-4">
      <div class="grid-box">
        <div class="grid grid-a">
          <h2>Add a Burger</h2>
        </div>
        <div class="grid grid-b">
          <div class="container container-3">
            <form class="create-form">

              <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
              </div>

              <div class="form-group">
                <label for="slee">STOCK STATUS:</label>
                <input type="radio" name="devoured" value="1" checked> DEVOURED!
                <input type="radio" name="devoured" value="0"> IN STOCK
              </div>

              <button type="submit">Add Burger</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
